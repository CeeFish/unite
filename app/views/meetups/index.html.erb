<div class="container mb-4">
  <h1 class="text-center font-weight-bold my-4">Meetups</h1>

    <table class="table table-striped mx-auto align-center">  
      <thead>
        <tr>
          <th>Title</th>
          <th>Location</th>
          <th>Group</th>
          <th>Date</th>
          <th>Time</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @meetups.each do |meetup| %>
          <tr>
            <td><%= meetup.title %></td>
            <td><%= meetup.location %></td>
            <td><%= meetup.group.title %></td>
            <td><%= meetup.date %></td>
            <td><%= meetup.time %></td>
            <td><%= link_to 'Show', meetup %></td>
            <td><%= link_to 'Edit', edit_meetup_path(meetup) %></td>
            <td><%= link_to 'Destroy', meetup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <br>
  <div class="row justify-content-center">
    <%= link_to 'New Meetup', new_meetup_path, class: "btn btn-primary" %>
  </div>
</div>